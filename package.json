{
  "name": "scoutswondelgem.be-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "set NODE_ENV=production & npm run tailwind:css:prod & node ./bin/www",
    "devstart": "nodemon ./bin/www",
    "serverstart": "cross-env DEBUG=scoutswondelgem.be-node:* & npm run devstart",
    "tailwind:css": "postcss public/stylesheets/tailwind.css -o public/stylesheets/tailwind-generated.css",
    "tailwind:css:prod": "cross-env NODE_ENV=production npm run tailwind:css"
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-react-views": "^0.11.0",
    "express-session": "^1.17.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "pg": "^8.5.1",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "pug": "^3.0.2",
    "randomstring": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sha.js": "^2.4.11",
    "sharp": "^0.28.3",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "public/js/**/*.js",
      "public/uploads/**/*.*"
    ]
  }
}
